@require "include"
@require "reset"
@require "material-icons"

html
  background-color $cl-light
  font-size 10px

body
  color $cl-dark
  min-width 768px
  font-size 1.6rem
  +mobile()
    font-size 1.4rem

a
  text-decoration none

button
  border none

.layout
  overflow hidden
  min-height 100vh

.material-icons
  display inline-flex
  align-items center
  font-size 1em

.leader-line
  z-index -1